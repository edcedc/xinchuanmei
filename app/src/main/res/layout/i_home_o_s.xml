<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="@dimen/px20"
        android:background="?actionBarItemBackground"
        tools:ignore="MissingConstraints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/px20"
            android:src="@drawable/no_banner"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="233dp"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:background="@mipmap/y13"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            android:layout_height="wrap_content"/>

    <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/px40"
            android:gravity="center"
            android:paddingLeft="@dimen/px5"
            android:paddingTop="@dimen/px3"
            android:paddingBottom="@dimen/px3"
            android:paddingRight="@dimen/px15"
            android:layout_marginLeft="@dimen/px8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:rv_cornerRadius_BR="@dimen/px20"
            app:rv_cornerRadius_TR="@dimen/px20"
            app:rv_backgroundColor="@color/org_FF9933"
            style="@style/Tv12gray"
            android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:textColor="@color/white"
            android:textSize="@dimen/size38"
            app:layout_constraintLeft_toLeftOf="@id/iv_img"
            app:layout_constraintRight_toRightOf="@id/iv_img"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_margin="@dimen/px40"
            style="@style/Tv15black"/>

</androidx.constraintlayout.widget.ConstraintLayout>