<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px20"
        android:paddingRight="@dimen/px20"
        android:paddingBottom="@dimen/px30"
        android:paddingTop="@dimen/px30"
        android:background="?actionBarItemBackground"
        tools:ignore="MissingConstraints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_marginRight="@dimen/px20"
            app:layout_constraintRight_toLeftOf="@id/iv_img"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:maxLines="2"
            style="@style/Tv15black"/>
    
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_img"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/no_banner"
            android:scaleType="fitXY"
            android:layout_width="@dimen/px198"
            android:layout_height="@dimen/px144"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:text="adasdas "
            app:layout_constraintBottom_toBottomOf="@id/iv_img"
            android:drawablePadding="@dimen/px20"
            style="@style/Tv12gray"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="@dimen/px40"
            app:layout_constraintLeft_toRightOf="@id/tv_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Tv12gray"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_read"
            android:layout_marginRight="@dimen/px20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_img"
            style="@style/Tv12gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>